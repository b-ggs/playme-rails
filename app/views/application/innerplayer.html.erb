<div class="playlists container">
	<h4>Playlists</h4>
	<div class="row" style="margin-top: 10px;">
		<% if @playlists.present? %>
			<% @playlists.each do |playlist| %>
				<%= form_tag('/playlistselect', method: :post, id: 'playlist-select') do %>
					<div class="col s6 m3">
						<div class="card" onclick="$(this).closest('form').submit();">
							<div class="card-image">
								<%= image_tag "default.png"  %>
								<input type="hidden" name="playlistId" value="<%= playlist.id %>" />
							</div>
							<div class="card-content">
								<span class="card-title grey-text text-darken-4">
									<%= playlist.name %>
								</span>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		<% end %>
		<div class="col s6 m3">
			<div href="#playlist-modal" class="card modal-trigger">
				<div class="card-image">
					<%= image_tag "newplaylist.png"  %>
				</div>
				<div class="card-content">
					<span class="card-title activator grey-text text-darken-4">New Playlist</span>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="playlist-modal" class="modal">
	<div class="modal-content">
		<h4>New Playlist</h4>
		<%= form_tag('/newplaylist', method: :post) do %>
			<div class="row">
				<div class="input-field col s12">
					<i class="mdi-av-playlist-add prefix"></i>
			        <input id="pname" name="pname" type="text" class="validate">
			        <label for="pname">Name</label>
		      	</div>
			</div>
		<div class="modal-footer">
				<button type="submit" class="waves-effect waves-green btn-flat" value="Create" onclick="parent.location.href = parent.location.href"> Create </button>
		</div>
		<% end %>
	</div>
</div>
