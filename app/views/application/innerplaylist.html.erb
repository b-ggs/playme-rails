<div class="playlistDetails container">
	<% if @playlist.present? %>
		<span>
			<h4 class="nobreak"><%= @playlist.name %></h4>
			<a href="#!" class="black-text"><i class="mdi-image-edit tiny-small"></i></a>
			<a href="#!" class="black-text"><i class="mdi-action-delete tiny-small"></i></a>
		</span>
			<ul class="collection with-header">
			<li class="collection-item">
				<% if @playlistcontent.present? %>
					<% @playlistcontent.each do |playlistItem| %>
						<div>
							<b><span><%= playlistItem.title %></span></b>&nbsp;&nbsp;&nbsp;&nbsp;
							<span><%= playlistItem.artist %></span>&nbsp;&#8226;
							<span><%= playlistItem.album %></span>
							<a href="#!" class="secondary-content black-text"><i class="mdi-action-delete"></i></a>
							<a href="#!" class="secondary-content black-text"><i class="mdi-av-play-arrow"></i></a>
						</div>
					<% end %>
				<% else %>
					<div>
						<span>This playlist is empty.</span>
					</div>
				<% end %>
			</li>
		</ul>
	<% end %>
</div>